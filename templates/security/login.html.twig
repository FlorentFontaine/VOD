{% extends "base.html.twig" %}

{% block body %}
<div class="jumbotron">
<div class="container">

<h1>Connexion Admin</h1>
<div class="title">
{% if error %}
<div class="alert alert-danger">
{{error.messageKey | trans(error.messagedata, 'security') }}
</div>
{% endif %}


<form action="{{ path('login')}}" method="post">
    <div class="form-group">
        <label for="username">Nom Utilisateur</label>
        <input type="text" id="username" name="_username" classe"form-control" value="{{last_Username}}">
    </div>

    <div class="form-group">
        <label for="password" style="margin-right: 44px;">Password</label>
        <input type="password" id="password" name="_password" classe"form-control">
    </div>
    <button type="submit" class="btn btn-primary">Connexion</button>
</form>
</div>
</div>
</div>


{% endblock %}