{% extends "base.html.twig" %}

{% block body %}
<div class="jumbotron text-center">
        <h1>Films</h1>
        <p>{{ movies.Title}}</p>
    </div>
    <div class="jumbotron text-center">    
        <div class="row">
            <div class="col-md-4">
                <h1 class ="text-primary" style="font-size: 4rem; font-weight:old;"> {{movies.Title}}</h1>
                <h2> Le Réalisateur : {{movies.realisateur}}.</h2>
                <p>Avec la participation de : {{movies.acteur}}.
                <p class="card-text">Durée du film : {{movies.temps}} </p>
                <p> Type : {{movies.genreType}}</p>
                <a href="#" class="btn btn-primary">REGARDER</a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
            <h2>{{ movies.description}}</h2> 
                <div>
                    {% if movies.vu == 1 %}
                        <p>Film déja vu !!</p>
                    {% else %}
                        <p>Si tu la pas vu c'est bizarre xD</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}